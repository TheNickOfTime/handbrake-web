{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["es2022"],

    "paths": {
      "routes/*": ["./src/routes/*"],
      "logging": ["./src/scripts/logging"],
      "scripts/*": ["./src/scripts/*"],
      "socket/*": ["./src/socket/*"],
      "shared/*": ["../shared/*"],
      "types/*": ["../shared/types/*"],
      "funcs/*": ["../shared/funcs/*"]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": ["./src"]
}
